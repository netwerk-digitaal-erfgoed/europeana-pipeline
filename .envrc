#!/bin/bash

keys_file=.envrc-private

if [ ! -f ${keys_file} ]; then
  cat >> ${keys_file} <<'EOF'
#!/bin/bash

# SOURCE_DATASET :: The IRI that denotes the source dataset in the NDE Dataset Registry.
export SOURCE_DATASET=

# DESTINATION_DATASET :: The name of the dataset in TriplyDB.  The name must only use alphanumeric characters and hyphen (`-`).
export DESTINATION_DATASET=

# LOCAL_QUERY :: The location where the transformation can be found.  Notice that this is only used when the source dataset does not include a transformation query in its metadata.
export LOCAL_QUERY=

# TRIPLYDB_TOKEN :: Set the default TriplyDB token; should be aligned with the host TriplyDB instance
export TRIPLYDB_TOKEN=

# SHACL_REPORT :: Set the shacl report output file
export SHACL_REPORT=
EOF
fi

[ -z "${TRIPLYDB_TOKEN}" ] \
  && echo "Modify the environment variables in ${keys_file} and run 'source ${keys_file}."
